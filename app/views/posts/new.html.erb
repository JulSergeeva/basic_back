<div>
  <h1>New post</h1>
  <%= form_for :posts, url: { action: "create" } do |f| %>
    <div>
      <%= f.label :text, class: "col-sm-2 col-form-label" %>
      <%= f.text_field :text, class: "form-control", style: "border: 1px solid #ccc;" %>
    </div>
    <div style="margin-top: 10px;">
      <%= f.submit "Create", class: "btn btn-success" %>
    </div>
  <% end %>
</div>